{
  "name": "Go",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest"
    }
  },
  "mounts": [
    {
      "type": "volume",
      "source": "devpod",
      "target": "/home/vscode"
    }
  ],
  "runArgs": ["--userns=keep-id"],
  "remoteUser": "${localEnv:USER}",
  "containerEnv": { "HOME": "/workspaces/devpod" }
}
